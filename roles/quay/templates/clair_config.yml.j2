log_level: "info"
introspection_addr: ""
http_listen_addr: ":6060"
updaters:
  sets:
#    - "alpine" seems that is problematic
    - "aws"
    - "debian"
    - "oracle"
    - "photon"
    - "pyupio"
    - "rhel"
    - "suse"
    - "ubuntu"
indexer:
  connstring: "postgres://{{ postgresql_user }}:{{ postgresql_password }}@{{ postgresql_host | default('localhost') }}/clair?sslmode=disable"
  scanlock_retry: 10
  layer_scan_concurrency: 5
  migrations: true
matcher:
  indexer_addr: "http://localhost:6060/"
  connstring: "postgres://{{ postgresql_user }}:{{ postgresql_password }}@{{ postgresql_host | default('localhost') }}/clair?sslmode=disable"
  max_conn_pool: 100
  migrations: true
notifier:
  indexer_addr: http://localhost:6060/
  matcher_addr: http://localhost:6060/
  connstring: "postgres://{{ postgresql_user }}:{{ postgresql_password }}@{{ postgresql_host | default('localhost') }}/clair?sslmode=disable"
  migrations: true
  delivery_interval: 5s
  poll_interval: 15s
